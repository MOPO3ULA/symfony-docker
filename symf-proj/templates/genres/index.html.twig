{% extends '@TwigTemplate/base.html.twig' %}

{% block body %}

    <h1>Genres</h1>

    {% set vars = [] %}
    {% for genre in genres %}
        {% set vars = vars|merge([{
            'obj': genre,
            'link': path('genreDetail', {id: genre.id})
        }]) %}
    {% endfor %}

    {% include '@TwigTemplate/main/index_count_lists/list/list.html.twig' with {
        items: vars
    } %}

{% endblock body %}

{% block title %}Genres{% endblock %}