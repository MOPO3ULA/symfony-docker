{% extends '@TwigTemplate/base.html.twig' %}

{% block body %}

    <h1>{{ category.getName() }}</h1>
    {% if beats %}
        {% for beat in beats %}
            <p>
                <a href="{{ path('beatsDetail', {'id': beat.getId()}) }}">
                    {{ beat.getTitle() }}
                </a>
            </p>
        {% endfor %}
    {% else %}
        <p>К сожалению, данная категория пуста</p>
    {% endif %}

{% endblock body %}

{% block title %}{{ category.getName() }}{% endblock %}